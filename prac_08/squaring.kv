BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_number
            hint_text: 'Enter a number'
            multiline: False

        Button:
            text: 'Square'
            on_press: app.handle_calculate()

        Label:
            id: output_label
            text: ''
            color: 1, 0.4, 0.7, 1  # Pink

    Label:
        text: "Enter a number and press 'Square'"
