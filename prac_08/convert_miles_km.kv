BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        Button:
            text: 'Up'
            on_press: app.handle_increment(1)

        TextInput:
            id: input_miles
            text: '0'
            multiline: False
            input_filter: 'float'
            on_text: app.handle_convert()

        Button:
            text: 'Down'
            on_press: app.handle_increment(-1)

    Button:
        text: 'Convert'
        on_press: app.handle_convert()

    Label:
        text: app.output_text
        color: 0.5, 1, 0.5, 1
        font_size: 32

    Label:
        text: 'Enter miles and press Convert or use Up/Down'
